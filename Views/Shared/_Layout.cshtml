                Tools
            </div>


            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("AddEvents","Home")">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Add Events</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewEvents","Home")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>View Events</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">
