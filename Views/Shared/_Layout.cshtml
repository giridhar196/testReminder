<!-- Page level plugins -->
<script src="~/Content/Theme/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/Theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>


    function Register() {

       var FirstName = $("#FirstName").val();
       var LastName = $("#LastName").val();
       var Email = $("#Email").val();
       var Password = $("#Password").val();
       var RepeatPassword = $("#RepeatPassword").val();

        if (Password === RepeatPassword) {

            var Type = "POST";
            var Url = '@Url.Action("Register", "Home")';
            var Reg = {
                FirstName: FirstName,
                LastName: LastName,
                Email: Email,
                Password: Password
            };

            $.ajax({
                type: Type,
                url: Url,
                data: JSON.stringify({ 'Reg': Reg,'IsModel': false }),
                contentType: "application/json",
                success: function (result) {
                    console.log(result);
                    var res = result.Status;
                    if (res == 1) {
                        swal({
                            title: "Success!",
                            text: "Successful creating a new user!",
                            icon: "success",
                            button: "OK",
                        });

                        $("#FirstName").val("");
                        $("#LastName").val("");
                        $("#Email").val("");
                        $("#Password").val("");
                        $("#RepeatPassword").val("");

                    } else{
                        swal({
                            title: "Error!",
                            text: "Please contact the system administrator!",
                            icon: "error",
                            button: "OK",
                        });
                    }

                }
            });
        } else {
            swal({
                title: "Warning!",
                text: "Please check the password!",
                icon: "warning",
                button: "Ok",
            });
        }
    }



</script>